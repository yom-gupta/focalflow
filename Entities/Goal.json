{
  "name": "Goal",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Goal title (e.g., iPhone 15 Pro)"
    },
    "target_amount": {
      "type": "number",
      "description": "Target amount to save"
    },
    "current_amount": {
      "type": "number",
      "default": 0,
      "description": "Current saved amount"
    },
    "deadline": {
      "type": "string",
      "format": "date",
      "description": "Goal deadline"
    },
    "icon": {
      "type": "string",
      "description": "Icon name for the goal"
    }
  },
  "required": [
    "title",
    "target_amount"
  ]
}