{
  "name": "Expense",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Expense title"
    },
    "amount": {
      "type": "number",
      "description": "Expense amount"
    },
    "category": {
      "type": "string",
      "enum": [
        "gear",
        "software",
        "marketing",
        "travel",
        "other"
      ],
      "description": "Expense category"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Expense date"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "title",
    "amount",
    "date"
  ]
}